#load "tests/raylib.zen";

struct Vector2I
{
	int x;
	int y;
}

fun void main()
{
    raylib::InitWindow(1280, 720, "Zen");

	let Vector2I playerPos;

	while (raylib::WindowShouldClose() == false)
	{
		raylib::BeginDrawing();

		let raylib::Color black;
		black.r = 0; black.g = 0; black.b = 0; black.a = 255;
		raylib::ClearBackground(black);
		
		raylib::DrawFPS(20, 20);

		playerPos.x = raylib::GetMouseX();
		playerPos.y = raylib::GetMouseY();

		let raylib::Color color;
		color.r = 255; color.g = 255; color.b = 0; color.a = 255;
		raylib::DrawRectangle(playerPos.x, playerPos.y, 32, 32, color);

		raylib::EndDrawing();
	}
	raylib::CloseWindow();
}