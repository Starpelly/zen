extern fun void InitWindow(int width, int height, string title);
extern fun void CloseWindow();
extern fun bool WindowShouldClose();

extern fun void BeginDrawing();
extern fun void EndDrawing();

extern fun int GetMouseX();

fun void test_game()
{
    InitWindow(1280, 720, "Zen");
	while (WindowShouldClose() == false)
	{
		BeginDrawing();
		println(GetMouseX());
		EndDrawing();
	}
	CloseWindow();
}