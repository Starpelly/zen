namespace game;

enum EntityType
{
    None,
    Player,
    Crate
}

struct Entity
{
    EntityType type;
    int x;
    int y;
    float visualX;
    float visualY;
    bool player;
}

fun void entity_update(Entity* e)
{
    let float targetX = cast(float)e.x;
    let float targetY = cast(float)e.y;

    // Interpolate the visual position to the game world position
    e.visualX = math::lerp(e.visualX, targetX, 30.0 * delta_time);
    e.visualY = math::lerp(e.visualY, targetY, 30.0 * delta_time);
}