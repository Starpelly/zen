#load "../tests/raylib.zen";
#load "../std/math.zen";
#load "player.zen";

namespace game;

struct GameManager
{
	Player* player;
	int frame;
	float time;
}

fun void start_game()
{
    let raylib::Color black;
	black.r = 0; black.g = 0; black.b = 0; black.a = 255;

    raylib::InitWindow(1280, 720, "Zen");
	raylib::SetTargetFPS(60);

	let GameManager gameManager;
	let Player player;

	gameManager.player = &player;
	init_player(gameManager.player);

	while (!raylib::WindowShouldClose())
	{
		update_game(&gameManager);

		raylib::BeginDrawing();
		raylib::ClearBackground(black);
		
		draw_game(&gameManager);

		raylib::DrawFPS(20, 20);

		raylib::EndDrawing();
	}
	raylib::CloseWindow();
}

fun void update_game(GameManager* gameManager)
{
	gameManager.frame += 1;
	gameManager.time += raylib::GetFrameTime();

	update_player(gameManager.player);
}

fun void draw_game(GameManager* gameManager)
{
	draw_player(gameManager.player);

	let float sinx = math::sinf(gameManager.time * 8.0) * 44.0;
	let float siny = math::cosf(gameManager.time * 8.0) * 44.0;
	raylib::DrawCircle(cast(int)sinx + 400, cast(int)siny + 400, 32, gameManager.player.color);

	println(sinx);
}